{
  "name": "@bluryar/material-templates",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git-cz",
    "test": "vitest",
    "bump:major": "pnpm run bump:major -r && npx bumpp major --all --yes",
    "bump:minor": "pnpm run bump:minor -r && npx bumpp minor --all --yes",
    "bump:patch": "pnpm run bump:patch -r && npx bumpp patch --all --yes"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.11.6",
    "@antfu/ni": "^0.21.12",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/node": "^v18.19.1",
    "bumpp": "^9.4.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit $1",
    "pre-push": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,mts,cts,md,html,yaml,yml}": [
      "eslint --fix"
    ]
  },
  "version": "0.1.2"
}
